_me="sestrenexsis"
_cart="lakeside"
--cartdata(_me.."_".._cart.."_1")
--_version=1

person={}

_layers={
	{ 0,0,16,16,0,0,32.0},
	{16,0, 2,16,0,0,16.0},
	{18,0, 2,16,0,0,4.0},
	{20,0, 2,16,0,0,1.0},
	{22,0, 4,16,0,0,0.8}
}

function person:new(
	x, -- x position : number
	y  -- y position : number
	)
	local obj={
		x=x,
		y=y,
		an=0,
		fc=6
	}
	return setmetatable(
		obj,{__index=self}
	)
end

function person:update()
	if t()%0.25==0 then
		self.an=(self.an+1)%4
	end
end

function person:draw()
	local fx=self.f==4
	spr(
		self.an,self.x,self.y,1,2,fx
		)
end

function _init()
	--_cam={x=0,y=0}
	_p=person:new(64,56)
end

function _update()
	if btn(⬅️) then
		_p.x-=1.5
		_p.f=4
	elseif btn(➡️) then
		_p.x+=1.5
		_p.f=6
	end
	_p:update()
end

function _draw()
	cls(2)
	camera()
	for l in all(_layers) do
		local sw=8*l[3]
		local sh=8*l[4]
		local sx=l[5]
		local sy=l[6]
		sx=(sx-_p.x)/l[7]
		--sy=(sy+_p.y)/l[7]
		repeat
			map(
				l[1],l[2],sx,sy,l[3],l[4]
				)
			sx+=sw
		until sx>=128
	end
end
