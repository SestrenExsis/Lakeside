person={}

function person:new(
	x, -- x position : number
	y  -- y position : number
	)
	local obj={
		x=x,
		y=y,
		an=0,
		fc=6
	}
	return setmetatable(
		obj,{__index=self}
	)
end

function person:update()
	if t()%0.25==0 then
		self.an=(self.an+1)%4
	end
end

function person:draw()
	local fx=self.f==4
	spr(
		self.an,self.x,self.y,1,2,fx
		)
end

function _init()
	_p=person:new(64,64)
end

function _update()
	if btn(⬅️) then
		_p.x-=1
		_p.f=4
	elseif btn(➡️) then
		_p.x+=1
		_p.f=6
	end
	_p:update()
end

function _draw()
	cls()
	_p:draw()
end
